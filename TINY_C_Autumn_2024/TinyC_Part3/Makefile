YACC_FILE = "tinyC3_22CS10058_22CS10063.y"
LEX_FILE = "tinyC3_22CS10058_22CS10063.l"
C_FILE = "tinyC3_22CS10058_22CS10063.cxx"
INPUT_FILE_1 = "tinyC3_22CS10058_22CS10063_test1.c"
INPUT_FILE_2 = "tinyC3_22CS10058_22CS10063_test2.c"
INPUT_FILE_3 = "tinyC3_22CS10058_22CS10063_test3.c"
INPUT_FILE_4 = "tinyC3_22CS10058_22CS10063_test4.c"
INPUT_FILE_5 = "tinyC3_22CS10058_22CS10063_test5.c"
INPUT_FILE_6 = "tinyC3_22CS10058_22CS10063_test6.c"
INPUT_FILE_7 = "tinyC3_22CS10058_22CS10063_test7.c"
OUTPUT_FILE_1 = "tinyC3_22CS10058_22CS10063_quads1.out"
OUTPUT_FILE_2 = "tinyC3_22CS10058_22CS10063_quads2.out"
OUTPUT_FILE_3 = "tinyC3_22CS10058_22CS10063_quads3.out"
OUTPUT_FILE_4 = "tinyC3_22CS10058_22CS10063_quads4.out"
OUTPUT_FILE_5 = "tinyC3_22CS10058_22CS10063_quads5.out"
OUTPUT_FILE_6 = "tinyC3_22CS10058_22CS10063_quads6.out"
OUTPUT_FILE_7 = "tinyC3_22CS10058_22CS10063_quads7.out"

all:
	yacc -d ${YACC_FILE}
	lex ${LEX_FILE}
	g++ ${C_FILE}

run:
	./a.out < ${INPUT_FILE_1} > ${OUTPUT_FILE_1}
	./a.out < ${INPUT_FILE_2} > ${OUTPUT_FILE_2}
	./a.out < ${INPUT_FILE_3} > ${OUTPUT_FILE_3}
	./a.out < ${INPUT_FILE_4} > ${OUTPUT_FILE_4}
	./a.out < ${INPUT_FILE_5} > ${OUTPUT_FILE_5}
	./a.out < ${INPUT_FILE_6} > ${OUTPUT_FILE_6}
	./a.out < ${INPUT_FILE_7} > ${OUTPUT_FILE_7}

clean:
	rm -f lex.yy.c y.tab.c y.tab.h a.out a.exe ${OUTPUT_FILE_1} ${OUTPUT_FILE_2} ${OUTPUT_FILE_3} ${OUTPUT_FILE_4} ${OUTPUT_FILE_5} ${OUTPUT_FILE_6} ${OUTPUT_FILE_7}